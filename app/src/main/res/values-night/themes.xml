<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/vazir</item>
        <item name="android:fontFamily">@font/vazir</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.Neumorph.CardView.Normal" parent="android:Widget">
        <item name="android:padding">@dimen/design_default_padding</item>
        <item name="android:stateListAnimator">@animator/button_state_list_anim_neumorph</item>
        <item name="neumorph_inset">@dimen/design_default_inset</item>
        <item name="neumorph_shadowElevation">6dp</item>
        <item name="neumorph_shadowColorLight">@color/gray700</item>
        <item name="neumorph_shadowColorDark">@color/gray900</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_shapeAppearance">@style/ShapeAppearance.Neumorph.CardView.Normal</item>
    </style>

    <style name="ShapeAppearance.Neumorph.CardView.Normal" parent="">
        <item name="neumorph_cornerFamily">oval</item>
        <item name="neumorph_cornerSize">0dp</item>
    </style>

</resources>